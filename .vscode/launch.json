{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "mac-debug-did-server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/did_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "mac_activate-venv",
            "python": "${workspaceFolder}/.venv/bin/python",
        },
        {
            "name": "mac-debug-did-server-clientmode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/did_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "mac_activate-venv",
            "args": ["--client", "--port", "9988"],
            "python": "${workspaceFolder}/.venv/bin/python",
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}